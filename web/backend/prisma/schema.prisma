generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
  engineType    = "binary"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE")
}

model Node {
  id             String    @id @default(uuid())
  name           String
  description    String?
  icon           String?
  address        String?
  connectedAt    DateTime?
  disconnectedAt DateTime?

  events NodeEvent[]
  token  NodeToken?

  @@unique([name])
}

model NodeToken {
  nodeId String @id @unique
  nonce  String

  node Node @relation(fields: [nodeId], references: [id], onDelete: Cascade)
}

model NodeEvent {
  id        String   @id @default(uuid())
  nodeId    String
  createdAt DateTime @default(now())
  event     String
  data      String?

  node Node @relation(fields: [nodeId], references: [id], onDelete: Cascade)

  @@map("NodeEvent")
}

model User {
  id       String @id @default(uuid())
  name     String
  password String

  @@unique([name])
}
